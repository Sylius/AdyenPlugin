<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="services/*.xml"/>
    </imports>

    <services>
        <defaults public="true"/>

        <service
            class="Sylius\AdyenPlugin\Callback\RequestCancelCallback"
            id="sylius_adyen.callback.request_cancel"
        >
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius.command_bus"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Callback\PreserveOrderTokenUponRedirectionCallback"
            id="sylius_adyen.callback.preserve_order_token_upon_redirection"
        >
            <argument type="service" id="request_stack"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Controller\Shop\DropinConfigurationAction"
            id="sylius_adyen.controller.shop.dropin_configuration"
        >
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius_adyen.provider.payment_methods"/>
            <argument type="service" id="router"/>
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="sylius_adyen.repository.adyen_token"/>

            <tag name="controller.service_arguments"/>
        </service>

        <service
            id="sylius_adyen.provider.payment_methods"
            class="Sylius\AdyenPlugin\Provider\PaymentMethodsProvider"
        >
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius_adyen.filter.configured_payment_methods"/>
            <argument type="service" id="sylius_adyen.filter.stored_payment_methods"/>
            <argument type="service" id="sylius_adyen.mapper.payment_methods"/>
            <argument type="service" id="sylius.command_bus"/>
        </service>
        <service id="Sylius\AdyenPlugin\Provider\PaymentMethodsProviderInterface" alias="sylius_adyen.provider.payment_methods" />


        <service
            id="sylius_adyen.clearer.payment_references"
            class="Sylius\AdyenPlugin\Clearer\PaymentReferencesClearer"
        >
            <argument type="service" id="sylius_adyen.repository.adyen_reference" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service
            id="sylius_adyen.generator.payment_link"
            class="Sylius\AdyenPlugin\Generator\PaymentLinkGenerator"
            public="false"
        >
            <argument type="service" id="sylius_adyen.provider.adyen_client" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument type="service" id="sylius_adyen.repository.payment_link" />
            <argument type="service" id="sylius_adyen.factory.payment_link" />
            <argument type="service" id="sylius_abstraction.state_machine" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="monolog.logger.adyen" />
        </service>

        <service
            id="sylius_adyen.twig.extension.adyen_payment_checker"
            class="Sylius\AdyenPlugin\Twig\Extension\AdyenPaymentCheckerExtension"
        >
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />

            <tag name="twig.extension" />
        </service>

        <service
            id="sylius_adyen.email_sender.payment_link"
            class="Sylius\AdyenPlugin\Email\Sender\PaymentLinkEmailSender"
        >
            <argument type="service" id="sylius.email_sender" />
        </service>

        <service
            id="sylius_adyen.listener.order_show_menu"
            class="Sylius\AdyenPlugin\Menu\AdminOrderShowMenuListener"
        >
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument type="service" id="sylius_abstraction.state_machine" />

            <tag name="kernel.event_listener" event="sylius.menu.admin.order.show" method="addRefundButton" />
        </service>
    </services>
</container>
