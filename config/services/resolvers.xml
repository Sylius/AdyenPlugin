<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service
                class="Sylius\AdyenPlugin\Resolver\PaymentIdResolver"
                id="sylius_adyen.resolver.payment_id"
        >
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="sylius.repository.order"/>
        </service>

        <service
                class="Sylius\AdyenPlugin\Resolver\Order\PaymentCheckoutOrderResolver"
                id="sylius_adyen.resolver.order.payment_checkout_order"
        >
            <argument type="service" id="request_stack"/>
            <argument type="service" id="sylius.context.cart"/>
            <argument type="service" id="sylius.repository.order"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Resolver\Notification\Command\AuthorizationCommandResolver"
            id="sylius_adyen.resolver.notification.notification_resolver.payment_notification"
        >
            <tag name="sylius_adyen.resolver.notification.command_resolver"/>
        </service>

        <service
            id="sylius_adyen.resolver.notification.refund_command"
            class="Sylius\AdyenPlugin\Resolver\Notification\Command\RefundCommandResolver"
        >
            <argument type="service" id="sylius_adyen.repository.adyen_reference"/>
            <argument type="service" id="sylius_adyen.repository.payment_link" />
            <argument type="service" id="sylius_adyen.bus.payment_command_factory"/>

            <tag name="sylius_adyen.resolver.notification.command_resolver"/>

            <tag name="sylius_adyen.resolver.notification.command_resolver"/>
        </service>

        <service
            id="sylius_adyen.resolver.notification.auto_rescue_command"
            class="Sylius\AdyenPlugin\Resolver\Notification\Command\AutoRescueCommandResolver"
        >
            <argument type="service" id="sylius_adyen.repository.adyen_reference"/>

            <tag name="sylius_adyen.resolver.notification.command_resolver"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Resolver\Notification\NotificationToCommandResolver"
            id="sylius_adyen.resolver.notification.notification_command"
        >
            <argument type="tagged_iterator" tag="sylius_adyen.resolver.notification.command_resolver"/>
        </service>

        <service
            id="sylius_adyen.resolver.version.version"
            class="Sylius\AdyenPlugin\Resolver\Version\VersionResolver"
        />

        <service
            class="Sylius\AdyenPlugin\Resolver\Notification\NotificationResolver"
            id="sylius_adyen.resolver.notification.notification"
        >
            <argument type="service" id="serializer"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="monolog.logger.adyen"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Resolver\Notification\Serializer\NotificationItemNormalizer"
            id="sylius_adyen.resolver.notification.serializer.notification_item_normalizer"
        >
            <tag name="serializer.normalizer"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Resolver\Payment\PaymentDetailsResolver"
            id="sylius_adyen.resolver.payment.payment_details"
        >

            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
            <argument type="service" id="sylius.repository.payment"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Resolver\Product\ThumbnailUrlResolver"
            id="sylius_adyen.resolver.product.thumbnail_url"
        >
            <argument type="service" id="liip_imagine.cache.manager"/>
        </service>

        <service
                class="Sylius\AdyenPlugin\Resolver\Address\StreetAddressResolver"
                id="sylius_adyen.resolver.address.street_address"
        />

    </services>
</container>
