<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service
            id="sylius_adyen.form.type.configuration"
            class="Sylius\AdyenPlugin\Form\Type\ConfigurationType"
        >
            <argument type="service" id="sylius_adyen.provider.esd_type"/>
            <tag name="form.type"/>
            <tag name="sylius.gateway_configuration_type" type="adyen" label="sylius_adyen.ui.ayden_gateway_label"/>
        </service>

        <service
                class="Sylius\AdyenPlugin\Form\Extension\PaymentTypeExtension"
                id="sylius_adyen.form.extension.payment_type"
        >
            <argument type="service" id="sylius_adyen.resolver.order.payment_checkout_order"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.context.shopper"/>
            <argument type="service" id="sylius_adyen.provider.payment_methods"/>
            <tag name="form.type_extension" />
        </service>

        <service class="Sylius\AdyenPlugin\Grid\Filter\LoggerLevel"
                 id="sylius_adyen.grid.filter.logger_level"
        >
            <tag name="sylius.grid_filter" type="adyen_log_level" form_type="Sylius\AdyenPlugin\Form\Type\LoggerLevelFilterType" />
        </service>

        <service
            id="sylius_adyen.form.extension.product_variant"
            class="Sylius\AdyenPlugin\Form\Extension\ProductVariantTypeExtension"
        >
            <tag name="form.type_extension" extended-type="Sylius\Bundle\ProductBundle\Form\Type\ProductVariantType" />
        </service>
    </services>
</container>
