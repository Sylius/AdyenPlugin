<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true">
            <tag name="controller.service_arguments"/>
        </defaults>

        <service
            id="sylius_adyen.controller.shop.express_checkout.cart_configuration"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\CartConfigurationAction"
        >
            <argument type="tagged_iterator" tag="sylius_adyen.express_checkout.cart.configuration" index-by="key" />
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius_adyen.provider.payment_methods_for_order"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.country"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.product_configuration"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\ProductConfigurationAction"
        >
            <argument type="tagged_iterator" tag="sylius_adyen.express_checkout.cart.configuration" index-by="key" />
            <argument type="service" id="sylius.context.cart.new"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius_adyen.provider.payment_methods_for_order"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.country"/>
            <argument type="service" id="router"/>
        </service>

        <service
                id="sylius_adyen.controller.shop.express_checkout.add_to_new_cart"
                class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\AddToNewCartAction"
        >
            <argument type="service" id="sylius.factory.add_to_cart_command" />
            <argument type="service" id="sylius.context.cart.new" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sylius.factory.order_item" />
            <argument type="service" id="form.factory" />
            <argument type="service">
                <service class="Sylius\Component\Resource\Metadata\MetadataInterface">
                    <factory service="sylius.resource_registry" method="get" />
                    <argument type="string">sylius.order_item</argument>
                </service>
            </argument>
            <argument type="service" id="sylius.resource_controller.new_resource_factory" />
            <argument type="service" id="sylius.modifier.order_item_quantity" />
            <argument type="service" id="sylius.modifier.order" />
            <argument type="service" id="sylius.resource_controller.request_configuration_factory" />
            <argument type="service" id="sylius.unique_id_based_order_token_assigner" />
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.remove_cart"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\RemoveCartAction"
        >
            <argument type="service" id="sylius.repository.order"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.google_pay.shipping_options"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\GooglePay\ShippingOptionsAction"
        >
            <argument type="service" id="sylius_adyen.resolver.order.payment_checkout_order"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="sylius.repository.shipping_method"/>
            <argument type="service" id="sylius.order_processing.order_processor"/>
            <argument type="service" id="sylius_adyen.modifier.express_checkout.google_pay.order_address"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.google_pay.transaction_info"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.google_pay.shipping_option_parameters"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.google_pay.checkout"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\GooglePay\CheckoutAction"
        >
            <argument type="service" id="sylius_adyen.resolver.order.payment_checkout_order"/>
            <argument type="service" id="sylius_adyen.modifier.express_checkout.google_pay.order_address"/>
            <argument type="service" id="sylius_adyen.modifier.express_checkout.order_customer"/>
            <argument type="service" id="sylius_adyen.resolver.order.express_checkout.checkout"/>
        </service>

        <service
            id="sylius_adyen.controller.admin.payment.generate_pay_link"
            class="Sylius\AdyenPlugin\Controller\Admin\GeneratePayLinkAction"
        >
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="sylius_adyen.generator.payment_link" />
            <argument type="service" id="sylius_adyen.email_sender.payment_link" />
            <argument type="service" id="router" />
            <argument type="service" id="request_stack" />
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.paypal.initialize"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\PayPal\InitializeAction"
        >
            <argument type="service" id="sylius_adyen.resolver.order.payment_checkout_order"/>
            <argument type="service" id="sylius.command_bus"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.paypal.shipping_address_change"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\PayPal\ShippingAddressChangeAction"
        >
            <argument type="service" id="sylius_adyen.resolver.order.payment_checkout_order"/>
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
            <argument type="service" id="sylius.order_processing.order_processor"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="sylius_adyen.modifier.express_checkout.paypal.order_address"/>
            <argument type="service" id="sylius.command_bus"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.paypal.shipping_options_change"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\PayPal\ShippingOptionsChangeAction"
        >
            <argument type="service" id="sylius_adyen.resolver.order.payment_checkout_order"/>
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
            <argument type="service" id="sylius.repository.shipping_method"/>
            <argument type="service" id="sylius.order_processing.order_processor"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="sylius.command_bus"/>
        </service>

        <service
                id="sylius_adyen.controller.shop.express_checkout.paypal.checkout"
                class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\PayPal\CheckoutAction"
        >
            <argument type="service" id="sylius_adyen.resolver.order.payment_checkout_order"/>
            <argument type="service" id="sylius_adyen.modifier.express_checkout.paypal.order_address"/>
            <argument type="service" id="sylius_adyen.modifier.express_checkout.order_customer"/>
            <argument type="service" id="sylius_adyen.resolver.order.express_checkout.checkout"/>
        </service>

        <service
            id="sylius_adyen.controller.admin.order_payment.reverse"
            class="Sylius\AdyenPlugin\Controller\Admin\ReverseOrderPaymentAction"
        >
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument type="service" id="sylius_adyen.processor.order.reverse_payment" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="router" />
        </service>

        <service
            id="sylius_adyen.controller.admin.order_payment.capture"
            class="Sylius\AdyenPlugin\Controller\Admin\CaptureOrderPaymentAction"
        >
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="sylius_adyen.processor.manual_capture" />
            <argument type="service" id="router" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="monolog.logger.adyen" />
        </service>
    </services>
</container>
