<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true">
            <tag name="controller.service_arguments"/>
        </defaults>

        <service
            id="sylius_adyen.controller.shop.express_checkout.cart_configuration"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\CartConfigurationAction"
        >
            <argument type="tagged_iterator" tag="sylius_adyen.express_checkout.cart.configuration" index-by="key" />
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius_adyen.provider.payment_methods_for_order"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.google_pay.country"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.google_pay.shipping_options"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\GooglePay\ShippingOptionsAction"
        >
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius.shipping_methods_resolver"/>
            <argument type="service" id="sylius.order_processing.order_processor"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.google_pay.address"/>
            <argument type="service" id="sylius.registry.shipping_calculator"/>
            <argument type="service" id="sylius.money_formatter"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.google_pay.transaction_info"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.google_pay.checkout"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\GooglePay\CheckoutAction"
        >
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.google_pay.address"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.customer"/>
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius.repository.shipping_method"/>
            <argument type="service" id="sylius.repository.payment_method"/>
        </service>

        <service
            id="sylius_adyen.controller.admin.payment.generate_pay_link"
            class="Sylius\AdyenPlugin\Controller\Admin\GeneratePayLinkAction"
        >
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="sylius_adyen.generator.payment_link" />
            <argument type="service" id="sylius_adyen.email_sender.payment_link" />
            <argument type="service" id="router" />
            <argument type="service" id="request_stack" />
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.paypal.initialize"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\PayPal\InitializeAction"
        >
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius.command_bus"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.paypal.shipping_address_change"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\PayPal\ShippingAddressChangeAction"
        >
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
            <argument type="service" id="sylius.order_processing.order_processor"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="sylius_adyen.modifier.express_checkout.paypal.order_address"/>
            <argument type="service" id="sylius.command_bus"/>
        </service>

        <service
            id="sylius_adyen.controller.shop.express_checkout.paypal.shipping_options_change"
            class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\PayPal\ShippingOptionsChangeAction"
        >
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
            <argument type="service" id="sylius.repository.shipping_method"/>
            <argument type="service" id="sylius.order_processing.order_processor"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="sylius.command_bus"/>
        </service>

        <service
                id="sylius_adyen.controller.shop.express_checkout.paypal.checkout"
                class="Sylius\AdyenPlugin\Controller\Shop\ExpressCheckout\PayPal\CheckoutAction"
        >
            <argument type="service" id="sylius.context.cart.composite"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.customer"/>
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius_adyen.modifier.express_checkout.paypal.order_address"/>
        </service>

        <service
            id="sylius_adyen.controller.admin.order_payment.reverse"
            class="Sylius\AdyenPlugin\Controller\Admin\ReverseOrderPaymentAction"
        >
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument type="service" id="sylius_adyen.processor.order.reverse_payment" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="router" />
        </service>
    </services>
</container>
