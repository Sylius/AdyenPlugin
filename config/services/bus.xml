<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\PaymentFinalizationHandler"
            id="sylius_adyen.bus.handler.authorize_payment"
        >
            <argument type="service" id="sylius_abstraction.state_machine"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\PaymentStatusReceivedHandler"
            id="sylius_adyen.bus.handler.payment_status_received"
        >
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="sylius.command_bus"/>
            <argument type="service" id="sylius_adyen.bus.payment_command_factory"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Resolver\Payment\EventCodeResolver"
            id="sylius_adyen.resolver.payment.event_code"
        />

        <service
            class="Sylius\AdyenPlugin\Bus\PaymentCommandFactory"
            id="sylius_adyen.bus.payment_command_factory"
        >
            <argument type="service" id="sylius_adyen.resolver.payment.event_code"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\TakeOverPaymentHandler"
            id="sylius_adyen.bus.handler.take_over_payment"
        >
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius_adyen.clearer.payment_references"/>
            <argument type="service" id="sylius.manager.payment"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\AlterPaymentHandler"
            id="sylius_adyen.bus.handler.request_capture"
        >
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument type="service" id="sylius_abstraction.state_machine" />

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\RefundPaymentGeneratedHandler"
            id="sylius_adyen.bus.handler.refund_payment_generated"
        >
            <argument type="service" id="sylius_adyen.provider.adyen_client"/>
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius_refund.repository.refund_payment"/>
            <argument type="service" id="sylius.command_bus" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />

            <tag name="messenger.message_handler" bus="sylius.event_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\RefundPaymentHandler"
            id="sylius_adyen.bus.handler.refund_payment"
        >
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius_refund.manager.refund_payment"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\PaymentRefundedHandler"
            id="sylius_adyen.bus.handler.payment_refunded"
        >
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius_refund.factory.refund_payment"/>
            <argument type="service" id="sylius_adyen.factory.adyen_reference"/>
            <argument type="service" id="sylius_adyen.repository.adyen_reference"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="monolog.logger.adyen" />

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\CreateReferenceForPaymentHandler"
            id="sylius_adyen.bus.handler.create_reference_for_payment"
        >
            <argument type="service" id="sylius_adyen.repository.adyen_reference"/>
            <argument type="service" id="sylius_adyen.custom_factory.adyen_reference"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\CreateReferenceForRefundHandler"
            id="sylius_adyen.bus.handler.create_reference_for_refund"
        >
            <argument type="service" id="sylius_adyen.repository.adyen_reference"/>
            <argument type="service" id="sylius_adyen.custom_factory.adyen_reference"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\PrepareOrderForPaymentHandler"
            id="sylius_adyen.bus.handler.prepare_order_for_payment"
        >
            <argument type="service" id="sylius.order_number_assigner"/>
            <argument type="service" id="sylius.repository.order"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            class="Sylius\AdyenPlugin\Bus\Handler\ReversePaymentHandler"
            id="sylius_adyen.bus.handler.reverse_payment"
        >
            <argument type="service" id="sylius_adyen.provider.adyen_client" />
            <argument type="service" id="sylius_abstraction.state_machine" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
                class="Sylius\AdyenPlugin\Bus\Handler\CreatePaymentDetailForPaymentHandler"
                id="sylius_adyen.bus.handler.create_payment_detail_for_payment"
        >
            <argument type="service" id="sylius_adyen.repository.adyen_payment_detail"/>
            <argument type="service" id="sylius_adyen.custom_factory.adyen_payment_detail"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>

        <service
            id="sylius_adyen.bus.handler.authorize_payment_by_link"
            class="Sylius\AdyenPlugin\Bus\Handler\AuthorizePaymentByLinkHandler"
        >
            <argument type="service" id="sylius_adyen.repository.payment_link" />
            <argument type="service" id="serializer" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sylius.command_bus" />

            <tag name="messenger.message_handler" bus="sylius.command_bus" />
        </service>
    </services>
</container>
