<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service
                class="Sylius\AdyenPlugin\Provider\AdyenClientProvider"
                id="sylius_adyen.provider.adyen_client"
        >
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.context.shopper"/>
            <argument type="service" id="sylius_adyen.client.adyen_transport_factory"/>
            <argument type="service" id="sylius_adyen.client.client_payload_factory"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Client\ClientPayloadFactory"
            id="sylius_adyen.client.client_payload_factory"
        >
            <argument type="service" id="sylius_adyen.resolver.version.version"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="sylius_adyen.collector.esd.composite"/>
            <argument type="service" id="sylius_adyen.client.paypal_update_order_request_factory"/>
        </service>

        <service
            id="sylius_adyen.client.adyen_transport_factory"
            class="Sylius\AdyenPlugin\Client\AdyenTransportFactory"
        />

        <service
                class="Sylius\AdyenPlugin\Client\AdyenClient"
                id="sylius_adyen.client.adyen"
        >
            <factory service="sylius_adyen.provider.adyen_client" method="getDefaultClient"/>
        </service>

        <service
                class="Sylius\AdyenPlugin\Validator\Constraint\AdyenCredentialsValidator"
                id="sylius_adyen.validator.adyen_credentials"
        >
            <argument type="service" id="sylius_adyen.client.adyen_transport_factory"/>
            <tag name="validator.constraint_validator" alias="sylius_adyen.validator.credentials"/>
        </service>

        <service
                class="Sylius\AdyenPlugin\Provider\SignatureValidatorProvider"
                id="sylius_adyen.provider.signature_validator"
        >
            <argument type="service" id="sylius.repository.payment_method"/>
        </service>

        <service
            id="sylius_adyen.client.paypal_update_order_request_factory"
            class="Sylius\AdyenPlugin\Client\PaypalUpdateOrderRequestFactory"
        >
            <argument type="service" id="sylius.shipping_methods_resolver"/>
            <argument type="service" id="sylius.registry.shipping_calculator"/>
        </service>
        <service id="Sylius\AdyenPlugin\Client\PaypalUpdateOrderRequestFactoryInterface" alias="sylius_adyen.client.paypal_update_order_request_factory"/>
    </services>
</container>
