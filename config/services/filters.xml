<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service
            id="sylius_adyen.filter.configured_payment_methods"
            class="Sylius\AdyenPlugin\Filter\ConfiguredPaymentMethodsFilter"
        >
            <argument>%sylius_adyen.payment_methods.allowed_types%</argument>
            <argument>%sylius_adyen.payment_methods.mode%</argument>
        </service>
        <service id="Sylius\AdyenPlugin\Filter\PaymentMethodsFilterInterface" alias="sylius_adyen.filter.configured_payment_methods" />

        <service
            id="sylius_adyen.filter.stored_payment_methods"
            class="Sylius\AdyenPlugin\Filter\StoredPaymentMethodsFilter"
        />
        <service id="Sylius\AdyenPlugin\Filter\StoredPaymentMethodsFilterInterface" alias="sylius_adyen.filter.stored_payment_methods" />

        <service
            class="Sylius\AdyenPlugin\EventSubscriber\FilterHttpAuthenticationForNotificationProcessor"
            id="sylius_adyen.event_subscriber.filter_http_authentication_for_notification_processor"
        >
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="monolog.logger.adyen"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\EventSubscriber\RoutePaymentCompleteTransitionSubscriber"
            id="sylius_adyen.event_subscriber.filter_payment_complete_transition_subscriber"
        >
            <argument type="service" id="sylius.command_bus"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\EventSubscriber\FilterManualRefundConfirmationSubscriber"
            id="sylius_adyen.event_subscriber.filter_manual_refund_confirmation_subscriber"
        >
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
