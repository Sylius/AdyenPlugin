<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service id="sylius.listener.complete_order_on_payment_authorised" class="Sylius\AdyenPlugin\Listener\CompleteOrderOnPaymentAuthorisedListener">
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="sylius.repository.order"/>

            <tag name="kernel.event_listener" event="Sylius\AdyenPlugin\Event\PaymentAuthorisedEvent" method="__invoke" />
        </service>
    </services>
</container>
