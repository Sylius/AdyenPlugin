<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
            id="sylius_adyen.provider.express_checkout.google_pay.transaction_info"
            class="Sylius\AdyenPlugin\Provider\ExpressCheckout\GooglePay\TransactionInfoProvider"
        >
            <argument type="service" id="translator"/>
        </service>
        <service id="Sylius\AdyenPlugin\Provider\ExpressCheckout\GooglePay\TransactionInfoProviderInterface"
                 alias="sylius_adyen.provider.express_checkout.google_pay.transaction_info" />

        <service
            id="sylius_adyen.provider.express_checkout.google_pay.address"
            class="Sylius\AdyenPlugin\Provider\ExpressCheckout\GooglePay\AddressProvider"
        >
            <argument type="service" id="sylius.factory.address"/>
        </service>
        <service id="Sylius\AdyenPlugin\Provider\ExpressCheckout\GooglePay\AddressProviderInterface"
                 alias="sylius_adyen.provider.express_checkout.google_pay.address" />

        <service
            id="sylius_adyen.provider.express_checkout.customer"
            class="Sylius\AdyenPlugin\Provider\ExpressCheckout\CustomerProvider"
        >
            <argument type="service" id="sylius.repository.customer"/>
            <argument type="service" id="sylius.factory.customer"/>
        </service>
        <service id="Sylius\AdyenPlugin\Provider\ExpressCheckout\CustomerProviderInterface"
                 alias="sylius_adyen.provider.express_checkout.customer" />

        <service
            id="sylius_adyen.provider.express_checkout.google_pay.country"
            class="Sylius\AdyenPlugin\Provider\ExpressCheckout\GooglePay\CountryProvider"
        >
            <argument type="service" id="sylius.repository.country"/>
        </service>
        <service id="Sylius\AdyenPlugin\Provider\ExpressCheckout\GooglePay\CountryProviderInterface"
                 alias="sylius_adyen.provider.express_checkout.google_pay.country" />

        <service
            id="sylius_adyen.provider.express_checkout.cart.google_pay_configuration"
            class="Sylius\AdyenPlugin\Provider\ExpressCheckout\Cart\GooglePayConfigurationProvider"
        >
            <argument type="service" id="router"/>
            <argument type="service" id="sylius_adyen.provider.express_checkout.google_pay.transaction_info"/>
            <tag name="sylius_adyen.express_checkout.cart.configuration" key="googlePay" />
        </service>

        <service
            id="sylius_adyen.provider.express_checkout.cart.paypal_configuration"
            class="Sylius\AdyenPlugin\Provider\ExpressCheckout\Cart\PaypalConfigurationProvider"
        >
            <argument type="service" id="router"/>
            <tag name="sylius_adyen.express_checkout.cart.configuration" key="paypal" />
        </service>

        <service
            id="sylius_adyen.provider.express_checkout.cart.apple_pay_configuration"
            class="Sylius\AdyenPlugin\Provider\ExpressCheckout\Cart\ApplePayConfigurationProvider"
        >
            <argument type="service" id="router"/>
            <tag name="sylius_adyen.express_checkout.cart.configuration" key="applePay" />
        </service>
    </services>
</container>
