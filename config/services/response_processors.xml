<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true"/>

        <service
            class="Sylius\AdyenPlugin\Processor\PaymentResponseProcessor"
            id="sylius_adyen.processor.payment_response"
        >
            <argument type="tagged_iterator" tag="sylius_adyen.processor.payment_response"/>
            <argument type="service" id="router"/>
        </service>

        <service
            id="sylius_adyen.processor.payment_response_processor.abstract"
            class="Sylius\AdyenPlugin\Processor\PaymentResponseProcessor\AbstractProcessor"
            abstract="true"
        >
            <argument type="service" id="router" />
            <argument type="service" id="translator" />
        </service>

        <service
            id="sylius_adyen.processor.payment_response_processor.failed_response"
            class="Sylius\AdyenPlugin\Processor\PaymentResponseProcessor\FailedResponseProcessor"
            parent="sylius_adyen.processor.payment_response_processor.abstract"
        >
            <tag name="sylius_adyen.processor.payment_response"/>
        </service>

        <service
            id="sylius_adyen.processor.payment_response_processor.successful_response"
            class="Sylius\AdyenPlugin\Processor\PaymentResponseProcessor\SuccessfulResponseProcessor"
            parent="sylius_adyen.processor.payment_response_processor.abstract"
        >
            <tag name="sylius_adyen.processor.payment_response"/>
        </service>

        <service
            id="sylius_adyen.processor.payment_response_processor.payment_processing_response"
            class="Sylius\AdyenPlugin\Processor\PaymentResponseProcessor\PaymentProcessingResponseProcessor"
            parent="sylius_adyen.processor.payment_response_processor.abstract"
        >
            <tag name="sylius_adyen.processor.payment_response"/>
        </service>

        <service
            id="sylius_adyen.processor.payment_response_processor.fallback_response"
            class="Sylius\AdyenPlugin\Processor\PaymentResponseProcessor\FallbackResponseProcessor"
            parent="sylius_adyen.processor.payment_response_processor.abstract"
        >
            <tag name="sylius_adyen.processor.payment_response" priority="-100"/>
        </service>
    </services>
</container>
