{% set payment_method = hookable_metadata.context.resource %}

{% if sylius_adyen_is_adyen_payment_method(payment_method) %}
    <div class="col-12 col-md-12 pb-2">
        <div class="alert alert-info">
            <div class="mb-3 field col-12">
                <label class="form-label" for="notifications-endpoint">{{ 'sylius_adyen.ui.notification_endpoint_description'|trans }}</label>
                <input
                    type="text"
                    id="notifications-endpoint"
                    class="form-control"
                    value="{{ url('sylius_adyen_shop_process_notifications', {paymentMethodCode: payment_method.code}) }}"
                    readonly="readonly"
                >
            </div>
        </div>
    </div>
{% endif %}
